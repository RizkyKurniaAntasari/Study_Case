#include <iostream>
#include <iomanip>
#include <deque>
#include <string>
#include <fstream>
#include <vector>
using namespace std;

struct User{
    string name;
    string pass;
};

class ORDER;

class Bakery
{
private:
    User user;
    deque<string> j_kue_list; // Menyimpan jenis kue
    deque<string> u_kue_list; // Menyimpan ukuran kue
    deque<double> h_kue_list; // Menyimpan harga kue

    vector<string> kustom_tulisan;
    int IKT = 0; // index kostum tulisan

    bool masuk = false;
    bool active = true;
    bool done = false;

    double total = 0;

    char confirm;
    //char kustom_tulisan[1000];

public:
    Bakery(){}

    Bakery(const User &u){
        user = u;
    }

    void regist()
    {
        cout << "nama: ";
        cin >> user.name;
        cout << "pass: ";
        cin >> user.pass;
    }

    void login()
    {
        string a, b;
        cout << "nama: ";
        cin >> a;
        cout << "pass: ";
        cin >> b;

        if (a == user.name && b == user.pass)
        {
            cout << "Berhasil!\n";
            masuk = true;
        }
        else
        {
            cout << "pass/acc salah!\n";
        }
    }

    void printReceiptHeader(ofstream& file) {
        file << "===================================================================================" << endl;
        file << "                           Hammer Bakery               " << endl;
        file << "                      Jl. Pahlawan No. 123, Lampung    " << endl;
        file << "                       Tel: (4916) 718-1521            " << endl;
        file << "===================================================================================" << endl;
    }

    void printItems(ofstream& file) {
        for (size_t i = 0; i < j_kue_list.size(); ++i) {
            file << left << setw(15) << "Nama Barang" << ": " << j_kue_list[i] << endl;
            file << left << setw(15) << "Ukuran" << ": " << u_kue_list[i] << endl;
            file << left << setw(15) << "Tulisan" << ": " << kustom_tulisan[i] << endl;
            file << left << setw(15) << "Qty" << ": " << 1 << endl;
            file << left << setw(15) << "Harga" << ": Rp. " << fixed << setprecision(2) << h_kue_list[i] << endl;
            double subtotal = h_kue_list[i];
            file << left << setw(15) << "Subtotal" << ": Rp. " << fixed << setprecision(2) << subtotal << endl;
            file << "-----------------------------------------------------------------------------------" << endl;
            total += subtotal;
        }
    }

    void printReceiptFooter(ofstream& file, double total) {
        file << "===================================================================================" << endl;
        file << fixed << setprecision(2);
        file << "Total                : " << "Rp. " << total << endl;
        file << "===================================================================================" << endl;
        file << "       Terima kasih telah berbelanja!   " << endl;
    }

    void cetak_struk()
    {
        ofstream outputFile(user.name + "_struk.txt");

        if (outputFile.is_open()) {
            printReceiptHeader(outputFile);
            printItems(outputFile);
            printReceiptFooter(outputFile, total);
            outputFile.close();
            cout << "Struk telah berhasil dicetak ke dalam file 'struk.txt'" << endl;
        } else {
            cout << "Gagal membuka file untuk penulisan." << endl;
        }
    }

    void cetak_pesanan_kue()
    {
        cout << "____________________\n";
        cout << "Jenis  : " << j_kue_list.back();
        cout << "\nUkuran : " << u_kue_list.back();
        cout << "\nTulisan: " << kustom_tulisan[IKT];
        cout << "\nHarga  : " << h_kue_list.back();
        cout << "\n____________________";

        cout << "\n\nKonfirmasi (y/n) : ";
        cin >> confirm;

        if(confirm == 'y'){
            masuk = false;
            done = true;
            IKT++;
        }

        //if(h_kue_list.empty()){}
    }

    void costume_ukuran()
    {
        char ukuran;

        if(j_kue_list.back() != "Brownies Bites"){
            cout << "Ukuran apa ?\n";
            cout << "1. Whole\n";
            cout << "2. Slice\n";
            cout << "Jawab : ";
        }else {
            cout << "Berapa PCS ?\n";
            cout << "1. 16 PCS\n";
            cout << "2. 8 PCS\n";
            cout << "Jawab : ";
        }

        cin >> ukuran;

        string u_kue_temp;
        double h_kue_temp;

        if (ukuran == '1' && j_kue_list.back() == "Burnt ChesseCake"){
            u_kue_temp = "Whole";
            h_kue_temp = 65000;
        }
        else if (ukuran == '2' && j_kue_list.back() == "Burnt ChesseCake"){
            u_kue_temp = "Slice";
            h_kue_temp = 20000;
        }
        else if (ukuran == '1' && j_kue_list.back() == "Kue Lotus ChesseCake") {
            u_kue_temp = "Whole";
            h_kue_temp = 55000;
        }
        else if (ukuran == '2' && j_kue_list.back() == "Kue Lotus ChesseCake") {
            u_kue_temp = "Slice";
            h_kue_temp = 16000;
        }
        else if (ukuran == '1' && j_kue_list.back() == "Brownies Bites"){
            u_kue_temp = "16 pcs";
            h_kue_temp = 55000;
        }
        else if (ukuran == '2' && j_kue_list.back() == "Brownies Bites") {
            u_kue_temp = "8 pcs";
            h_kue_temp = 35000;
        }
        else if ((ukuran == '1' || ukuran == '2') && j_kue_list.back() == "Fudgy Brownies") {
            cout << "Hanya terdapat 1 macam!\n";
            return;
        }
        else {
            cout << "Ukuran tidak valid!\n";
            return;
        }

        u_kue_list.push_back(u_kue_temp); // Tambahkan ukuran kue ke deque
        h_kue_list.push_back(h_kue_temp); // Tambahkan harga kue ke deque
    }

    void custome_tulisan() {
        string temp =" ";
        cout << "Masukkan tulisan kustom : ";
        cin.ignore();
        getline(cin,temp);
        kustom_tulisan.push_back(temp);
    }

    void costume_list()
    {
        cout << "\n1. Ukuran\n";
        cout << "2. Tulisan\n";
        cout << "3. Pesan\n";
    }

    void costume_kue()
    {
        bool masih_milih = true;
        while (masih_milih)
        {
            char kueCostume;
            costume_list();

            cout << "Pilih (1/2/3) : ";
            cin >> kueCostume;
            switch (kueCostume)
            {
            case '1':
                costume_ukuran();
                break;

            case '2':
                custome_tulisan();
                break;

            case '3':
                cetak_pesanan_kue();
                masih_milih = false;
                active = false;
                break;
            default:
                cout << "Opsi tidak sesuai !\n";
                break;
            }
        }
    }

    void pesanan()
    {
        char kueChoice;
        kue();
        cout << "Pilih kue (1/2/3/4): ";
        cin >> kueChoice;

        switch (kueChoice)
        {
        case '1':
            cout << "Anda memilih Kue Burnt ChesseCake.\n";
            j_kue_list.push_back("Burnt ChesseCake");
            //h_kue_list.push_back(20000);
            break;
        case '2':
            cout << "Anda memilih Kue Lotus ChesseCake.\n";
            j_kue_list.push_back("Kue Lotus ChesseCake");
            //h_kue_list.push_back(16000);
            break;
        case '3':
            cout << "Anda memilih Brownies Bites.\n";
            j_kue_list.push_back("Brownies Bites");
            //h_kue_list.push_back(35000);
            break;
        case '4':
            cout << "Anda memilih Fudgy Brownies.\n";
            j_kue_list.push_back("Fudgy Brownies");
            //h_kue_list.push_back(60000);
            break;
        default:
            cout << "Pilihan tidak valid!\n";
            kueChoice = '\0';
            break;
        }
        costume_kue();
    }

    void kue()
    {
        cout << "1. Kue Burnt ChesseCake\n";
        cout << "2. Kue Lotus ChesseCake\n";
        cout << "3. Brownies Bites\n";
        cout << "4. Fudgy Brownies\n";
    }

    void greetingHammer()
    {
        cout << "\nSelamat datang di Hammer Bakery\n";
        cout << "Silahkan lihat-lihat!\n";
        kue();
    }

    void greeting()
    {
        cout << "__        _______ _     ____ ___  __  __ _____" <<endl;
        cout << "\\ \\      / / ____| |   / ___/ _ \\|  \\/  | ____|"<<endl;
        cout << " \\ \\ /\\ / /|  _| | |  | |  | | | | |\\/| |  _|"  <<endl;
        cout << "  \\ V  V / | |___| |__| |__| |_| | |  | | |___" <<endl;
        cout << "   \\_/\\_/  |_____|_____\\____\\___/|_|  |_|_____|"<<endl;
        cout <<"              TO HAMMER BAKERY\n";
        cout << "1. login\n";
        cout << "2. daftar\n";
        cout << "3. exit\n";
        cout << "jawaban: ";
    }

    void run()
    {
        char menu;

        while (active)
        {
            greeting();
            cin >> menu;

            switch (menu)
            {
            case '1':
                login();
                break;
            case '2':
                regist();
                break;
            case '3':
                active = false;
                break;
            default:
                cout << "opsi tidak sesuai!\n";
                break;
            }

            while (masuk)
            {
                char pesan;
                greetingHammer();
                cout << "mau pesen (y/n): ";
                cin >> pesan;

                switch (pesan)
                {
                case 'y':
                    masuk=false;
                    done=true;
                    break;
                case 'n':
                    masuk = false;
                    break;
                default:
                    cout << "Pilihan tidak valid!\n";
                    break;
                }
            }

            if (done)
            {
                int jumlah_pesanan;
                cout << "Berapa banyak kue yang ingin dipesan? ";
                cin >> jumlah_pesanan;

                for (int i = 0; i < jumlah_pesanan; ++i)
                {
                    cout << "\nPesanan ke-" << (i + 1) << ":\n";
                    pesanan();
                }

                cetak_struk();
                active = masuk = 0;
                cout << "Program Selesai.";
            }
        } // punya while active
    }
};

class ORDER{

};

int main()
{
    Bakery bakery;
    bakery.run();
    return 0;
}
