// <---------------------------------- [ D E V E L O P ] ---------------------------------->
#include <iostream>
#include <iomanip>
#include <deque>
#include <string>
#include <fstream>
#include <cstring>
using namespace std;

struct User{
    string name;
    string pass;
};

class ORDER;

class Bakery
{
private:
    User user;
    string j_kue,
        u_kue = "Sedang",
        i_kue = "Keju",
        r_kue = "Vanilla";

    bool masuk = false;
    bool active = true;
    bool done = false;

    double h_kue;
    double total = 0;


    char confirm;
    char kustom_tulisan[];

public:
    Bakery(){}

    Bakery(const User &u){
        user = u;
    }

    friend class ORDER;

    void regist()
    {
        cout << "nama: ";
        cin >> user.name;
        cout << "pass: ";
        cin >> user.pass;
    }

    void login()
    {
        string a, b;
        cout << "nama: ";
        cin >> a;
        cout << "pass: ";
        cin >> b;

        if (a == user.name && b == user.pass)
        {
            cout << "Berhasil!\n";
            masuk = true;
        }
        else
        {
            cout << "pass/acc salah!\n";
        }
    }

    // <---------------------------------[ S T R U K ]--------------------------------->
    void printReceiptHeader(ofstream& file) {
        file << "===================================================================================" << endl;
        file << "                           Hammer Bakery               " << endl;
        file << "                      Jl. Pahlawan No. 123, Lampung    " << endl;
        file << "                       Tel: (4916) 718-1521            " << endl;
        file << "===================================================================================" << endl;
    }

    void printItems(ofstream& file) {
        file << left << setw(15) << "Nama Barang"
            << left << setw(10) << "Ukuran"
            << left << setw(10) << "Tulisan"
            << right << setw(5) << "Qty"
            << right << setw(10) << "Harga"
            << right << setw(10) << "Subtotal" << endl;
        file << "-----------------------------------------------------------------------------------" << endl;

        double subtotal = h_kue;
        file << left << setw(15) << j_kue
            << left << setw(10) << u_kue
            << right << setw(10) << strlen(kustom_tulisan)
            << right << setw(5) << 1
            << right << setw(10) << h_kue
            << right << setw(10) << subtotal << endl;
        total += subtotal;
    }

    void printReceiptFooter(ofstream& file, double total) {
        file << "===================================================================================" << endl;
        file << fixed << setprecision(2);
        file << "Total                : " << "Rp. " << total << endl;
        file << "===================================================================================" << endl;
        file << "       Terima kasih telah berbelanja!   " << endl;
    }

    void cetak_struk()
    {
        ofstream outputFile(user.name + "struk.txt");

        if (outputFile.is_open()) {
            printReceiptHeader(outputFile);
            printItems(outputFile);
            printReceiptFooter(outputFile, total);
            outputFile.close();
            cout << "Struk telah berhasil dicetak ke dalam file 'struk.txt'" << endl;
        } else {
            cout << "Gagal membuka file untuk penulisan." << endl;
        }
    }
    // <---------------------------------[ C O N F I R M ]--------------------------------->

    void cetak_pesanan_kue()
    {
        cout << "____________________\n";
        cout << "Jenis  : " << j_kue;
        cout << "\nRasa   : " << r_kue;
        cout << "\nUkuran : " << u_kue;
        cout << "\nIsi    : " << i_kue;
        cout << "\nTulisan: " << kustom_tulisan;
        cout << "\nHarga  : " << h_kue;
        cout << "\n____________________";

        cout << "\n\nKonfirmasi (y/n) : ";
        cin >> confirm;

        if(confirm == 'y'){
            masuk = false;
            done = true;
        }
    }

    void costume_ukuran()
    {
        char ukuran;

        cout << "Ukuran apa ?\n";
        cout << "1. Whole\n";
        cout << "2. Slice\n";
        cout << "Jawab : ";
        cin >> ukuran;

        if (ukuran == '1' && j_kue == "Burnt ChesseCake"){
            u_kue = "Whole";
            h_kue = 65000;
        }

        else if (ukuran == '2' && j_kue == "Burnt ChesseCake"){
            u_kue = "Slice";
            h_kue = 20000;
        }

        if(ukuran == '1' && j_kue == "Kue Lotus ChesseCake") {
            u_kue = "Whole";
            h_kue = 55000;
        }
        else if (ukuran == '2' && j_kue == "Kue Lotus ChesseCake") {
            u_kue = "Slice";
            h_kue = 16000;
        }

        if(ukuran == '1' && j_kue == "Brownies Bites"){
            u_kue = "16 pcs";
            h_kue = 55000;
        }
        else if (ukuran == '2' && j_kue == "Brownies Bites") {
            u_kue = "8 pcs";
            h_kue = 35000;
        }

        if( (ukuran == '1' || ukuran == '2' ) && j_kue == "Fudgy Brownies") cout << "Hanya terdapat 1 macam!\n";

    }

    void custome_tulisan() {
    cout << "Masukkan tulisan kustom : ";
    cin.ignore();
    cin.getline(kustom_tulisan, 1000);
}

    void costume_list()
    {
        cout << "1. Ukuran\n";
        cout << "2. Tulisan\n";
        cout << "3. Pesan\n";
    }

    void costume_kue()
    {
        bool masih_milih = true;
        while (masih_milih)
        {
            char kueCostume;
            costume_list();

            cout << "Pilih (1/2/3/4) : ";
            cin >> kueCostume;
            switch (kueCostume)
            {
            case '1':
                costume_ukuran();
                break;

            case '2':
                custome_tulisan();
                break;

            case '3':
                cetak_pesanan_kue();
                masih_milih = false;
                active = false;
                break;
            default:
                cout << "Opsi tidak sesuai !\n";
                break;
            }
        }
    }

    void pesanan()
    {
        char kueChoice;
        kue();
        cout << "Pilih kue (1/2/3/4): ";
        cin >> kueChoice;

        switch (kueChoice)
        {
        case '1':
            cout << "Anda memilih Kue Burnt ChesseCake.\n";
            j_kue = "Burnt ChesseCake";
            h_kue = 20000;
            break;
        case '2':
            cout << "Anda memilih Kue Lotus ChesseCake.\n";
            j_kue = "Kue Lotus ChesseCake";
            h_kue = 16000;
            break;
        case '3':
            cout << "Anda memilih Brownies Bites.\n";
            j_kue = "Brownies Bites";
            h_kue = 35000;
            break;
        case '4':
            cout << "Anda memilih Fudgy Brownies";
            j_kue = "Fudgy Brownies";
            h_kue = 60000;
            break;
        default:
            cout << "Pilihan tidak valid!\n";
            kueChoice = '\0';
            break;
        }
        costume_kue();
    }

    void kue()
    {
        cout << "1. Kue Burnt ChesseCake\n";
        cout << "2. Kue Lotus ChesseCake\n";
        cout << "3. Brownies Bites\n";
        cout << "4. Fudgy Brownies\n";
    }

    void greetingHammer()
    {
        cout << "\nSelamat datang di Hammer Bakery\n";
        cout << "Silahkan lihat-lihat!\n";
        kue();
    }

    void greeting()
    {
cout<<"__        _______ _     ____ ___  __  __ _____" <<endl;
cout<<"\\ \\      / / ____| |   / ___/ _ \\|  \\/  | ____|"<<endl;
cout<<" \\ \\ /\\ / /|  _| | |  | |  | | | | |\\/| |  _|"  <<endl;
cout<<"  \\ V  V / | |___| |__| |__| |_| | |  | | |___" <<endl;
cout<<"   \\_/\\_/  |_____|_____\\____\\___/|_|  |_|_____|"<<endl;
cout <<"              TO HAMMER BAKERY\n";
        cout << "1. login\n";
        cout << "2. daftar\n";
        cout << "3. exit\n";
        cout << "jawaban: ";
    }

    void run()
    {
        char menu;

        while (active)
        {
            greeting();
            cin >> menu;

            switch (menu)
            {
            case '1':
                login();
                break;
            case '2':
                regist();
                break;
            case '3':
                active = false;
                break;
            default:
                cout << "opsi tidak sesuai!\n";
                cin.clear();
                cin.ignore();
                break;
            }

            while (masuk)
            {
                char pesan;
                greetingHammer();
                cout << "mau pesen (y/n): ";
                cin >> pesan;

                switch (pesan)
                {
                case 'y':
                    pesanan();
                    break;
                case 'n':
                    masuk = false;
                    break;
                default:
                    cout << "Pilihan tidak valid!\n";
                    break;
                }
            }

            if(done){
                cetak_struk();
                active = masuk = 0;
                cout << "Program Selesai.";
            }
            
        } // punya while active
    }
};

class ORDER{

};

int main()
{
    Bakery bakery;
    bakery.run();
    return 0;
}
