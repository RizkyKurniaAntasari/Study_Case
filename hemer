#include <iostream>
#include <iomanip>
#include <string>
#include <fstream>
using namespace std;
#include <iostream>
#include <iomanip>
#include <string>
#include <fstream>
using namespace std;

struct User{
    string name;
    string pass;
};

class Bakery
{
private:
    User user;
    string j_kue,
        u_kue = "Sedang",
        i_kue = "Keju",
        r_kue = "Vanilla";

    bool masuk = false;
    bool active = true;
    bool done = false;
    double h_kue;

    char confirm;

public:
    void regist()
    {
        cout << "nama: ";
        cin >> user.name;
        cout << "pass: ";
        cin >> user.pass;
    }

    void login()
    {
        string a, b;
        cout << "nama: ";
        cin >> a;
        cout << "pass: ";
        cin >> b;

        if (a == user.name && b == user.pass)
        {
            cout << "Berhasil!\n";
            masuk = true;
        }
        else
        {
            cout << "pass/acc salah!\n";
        }
    }

    // <---------------------------------[ S T R U K ]--------------------------------->
    void printReceiptHeader(ofstream& file) {
        file << "======================================================================" << endl;
        file << "                           Hammer Bakery               " << endl;
        file << "                      Jl. Pahlawan No. 123, Lampung    " << endl;
        file << "                       Tel: (4916) 718-1521            " << endl;
        file << "======================================================================" << endl;
    }

    void printItems(ofstream& file) {
        file << left << setw(15) << "Nama Barang"
            << left << setw(10) << "Rasa"
            << left << setw(10) << "Isi"
            << left << setw(10) << "Ukuran"
            << right << setw(5) << "Qty"
            << right << setw(10) << "Harga"
            << right << setw(10) << "Subtotal" << endl;
        file << "----------------------------------------------------------------------" << endl;

        double total = 0;

        double subtotal = h_kue;
        file << left << setw(15) << "Kue " + j_kue
            << left << setw(10) << r_kue
            << left << setw(10) << i_kue
            << left << setw(10) << u_kue
            << right << setw(5) << 1
            << right << setw(10) << h_kue
            << right << setw(10) << subtotal << endl;
        total += subtotal;
    }

    void printReceiptFooter(ofstream& file, double total) {
        file << "======================================================================" << endl;
        file << fixed << setprecision(2);
        file << "Total                : " << "Rp. " << total << endl;
        file << "======================================================================" << endl;
        file << "       Terima kasih telah berbelanja!   " << endl;
    }

    void cetak_struk()
    {
        ofstream outputFile("struk.txt");

        if (outputFile.is_open()) {
            printReceiptHeader(outputFile);
            printItems(outputFile);
            printReceiptFooter(outputFile, 100);
            outputFile.close();
            cout << "Struk telah berhasil dicetak ke dalam file 'struk.txt'" << endl;
        } else {
            cout << "Gagal membuka file untuk penulisan." << endl;
        }
    }
    // <---------------------------------[ C O N F I R M ]--------------------------------->

    void cetak_pesanan_kue()
    {
        cout << "____________________\n";
        cout << "Jenis  : " << j_kue;
        cout << "\nRasa   : " << r_kue;
        cout << "\nUkuran : " << u_kue;
        cout << "\nIsi    : " << i_kue;
        cout << "\nHarga  : " << h_kue;
        cout << "\n____________________";

        cout << "\n\nKonfirmasi (y/n) : ";
        cin >> confirm;

        if(confirm == 'y'){
            masuk = false;
            done = true;
        }
    }

    void costume_rasa()
    {
        char rasa;

        cout << "Rasa apa ?\n";
        cout << "1. Vanilla\n";
        cout << "2. Coklat\n";
        cout << "Jawab : ";
        cin >> rasa;

        if (rasa == '1')
            r_kue = "Vanilla";
        else if (rasa == '2')
            r_kue = "Coklat";
    }

    void costume_ukuran()
    {
        char ukuran;

        cout << "Ukuran apa ?\n";
        cout << "1. Besar\n";
        cout << "2. Sedang\n";
        cout << "Jawab : ";
        cin >> ukuran;

        if (ukuran == '1')
            u_kue = "Besar";
        else if (ukuran == '2')
            u_kue = "Sedang";
    }

    void costume_isi()
    {
        char isi;

        cout << "Isi apa ?\n";
        cout << "1. Ayam\n";
        cout << "2. Ikan\n";
        cout << "3. Keju\n";
        cout << "Jawab : ";
        cin >> isi;

        if (isi == '1')
            i_kue = "Ayam";
        else if (isi == '2')
            i_kue = "Ikan";
        else if (isi == '3')
            i_kue = "Keju";
    }

    void costume_list()
    {
        cout << "1. Rasa\n";
        cout << "2. Ukuran\n";
        cout << "3. Isi\n";
        cout << "4. Pesan\n";
    }

    void costume_kue()
    {
        bool masih_milih = true;
        while (masih_milih)
        {
            char kueCostume;
            costume_list();

            cout << "Pilih (1/2/3/4) : ";
            cin >> kueCostume;
            switch (kueCostume)
            {
            case '1':
                costume_rasa();
                break;

            case '2':
                costume_ukuran();
                break;

            case '3':
                costume_isi();
                break;
            case '4':
                cetak_pesanan_kue();
                masih_milih = false;
                active = false;
                break;
            default:
                cout << "Opsi tidak sesuai !\n";
                break;
            }
        }
    }

    void pesanan()
    {
        char kueChoice;
        kue();
        cout << "Pilih kue (1/2/3): ";
        cin >> kueChoice;

        switch (kueChoice)
        {
        case '1':
            cout << "Anda memilih Kue Tart.\n";
            j_kue = "Tart";
            h_kue = 100;
            break;
        case '2':
            cout << "Anda memilih Kue Madu.\n";
            j_kue = "Madu";
            h_kue = 200;
            break;
        case '3':
            cout << "Anda memilih Kue Butter.\n";
            j_kue = "Butter";
            h_kue = 300;
            break;
        default:
            cout << "Pilihan tidak valid!\n";
            break;
        }
        costume_kue();
    }

    void kue()
    {
        cout << "1. Kue Tart\n";
        cout << "2. Kue Madu\n";
        cout << "3. Kue Butter\n";
    }

    void greetingHammer()
    {
        cout << "\nSelamat datang di Hammer Bakery\n";
        cout << "Silahkan lihat-lihat!\n";
        kue();
    }

    void greeting()
    {
cout<<"__        _______ _     ____ ___  __  __ _____" <<endl;
cout<<"\\ \\      / / ____| |   / ___/ _ \\|  \\/  | ____|"<<endl;
cout<<" \\ \\ /\\ / /|  _| | |  | |  | | | | |\\/| |  _|"  <<endl;
cout<<"  \\ V  V / | |___| |__| |__| |_| | |  | | |___" <<endl;
cout<<"   \\_/\\_/  |_____|_____\\____\\___/|_|  |_|_____|"<<endl;
cout <<"              TO HAMMER BAKERY\n";
        cout << "1. login\n";
        cout << "2. daftar\n";
        cout << "3. exit\n";
        cout << "jawaban: ";
    }

    void run()
    {
        char menu;

        while (active)
        {
            greeting();
            cin >> menu;

            switch (menu)
            {
            case '1':
                login();
                break;
            case '2':
                regist();
                break;
            case '3':
                active = false;
                break;
            default:
                cout << "opsi tidak sesuai!\n";
                break;
            }

            while (masuk)
            {
                char pesan;
                greetingHammer();
                cout << "mau pesen (y/n): ";
                cin >> pesan;

                switch (pesan)
                {
                case 'y':
                    pesanan();
                    break;
                case 'n':
                    masuk = false;
                    break;
                default:
                    cout << "Pilihan tidak valid!\n";
                    break;
                }
            }

            if(done){
                cetak_struk();
                active = masuk = 0;
                cout << "Program Selesai.";
            }
            
        } // punya while active
    }
};

int main()
{
    Bakery bakery;
    bakery.run();
    return 0;
}
