#include <iostream>
using namespace std;

class Bakery {
private:
    string name;
    string pass;

public:
    Bakery(string n, string p) : name(n), pass(p) {}

    void display() const {
        cout << "Bakery Display" << endl;
    }

    friend class Data; // Declare Data as a friend class
};

class Data {
public:
    void keluar(const Bakery* bakery) {
        if (bakery) {
            bakery->display();
            // Accessing private members of Bakery
            cout << "Name: " << bakery->name << endl;
            cout << "Pass: " << bakery->pass << endl;
        } else {
            cout << "No Bakery provided" << endl;
        }
    }
};

int main() {
    Bakery bakery("BakeryName", "BakeryPass"); // Create an instance of Bakery with name and pass
    Data data;                                 // Create an instance of Data

    data.keluar(&bakery); // Call keluar with a pointer to Bakery

    return 0;
}
