#include <iostream>
#include <fstream>
using namespace std;

string nama,pass;
string j_kue,r_kue,u_kue,i_kue,h_kue;

bool log = false;
bool active = true;

string milih_kue;
string milih_rasa;
string milih_ukuran;
string milih_isi;

void cetak_struk(){

}

void rasa(){
    char rasa;
    cout << "1. Vanila\n";
    cout << "2. Coklat\n";
    cout << "3. Mentega\n";
    cout << "4. Matcha\n";
    cout << "Mau rasa apa ? : "; cin >> rasa;

    if(rasa == '1') r_kue = "Vanilla"; 
    else if(rasa == '2') r_kue = "Coklat"; 
    else if(rasa == '3') r_kue = "Mentega"; 
    else if(rasa == '4') r_kue = "Matcha"; 
}

void ukuran(){
    char ukuran;
    cout << "1. Besar\n";
    cout << "2. Medium\n";
    cout << "3. Keci\n";
    cout << "Mau ukuran apa ? : "; cin >> ukuran;

    if(ukuran == '1') u_kue = "Besar"; 
    else if(ukuran == '2') u_kue = "Medium"; 
    else if(ukuran == '3') u_kue = "Kecil"; 
}

void isi(){

}

void kosumisasi(){
    cout << "1. Rasa\n";
    cout << "2. Ukuran\n";
    cout << "3. isi\n";
    cout << "4. Cetak\n";
}

void rancang_kue(){
    char milih_rancangan;
    switch (milih_rancangan)
    {
    case '1':
        rasa();
        break;
    case '2':
        ukuran();
        break;
    case '3':
        isi();
        break;
    case '4':
        cetak_struk();
        break;
    
    default:
        break;
    }
}

void pilih_kue(){
    cout << "Mau kue apa ? : "; cin >> milih_kue;
    if(milih_kue == "1") j_kue = "Tart";
    else if(milih_kue == "2") j_kue = "Madu";
    else if(milih_kue == "3") j_kue = "Butter";

}

void kue(){
    cout << "1. Kue Tart\n";
    cout << "2. Kue Madu\n";
    cout << "3. Kue Butter\n";
}

void menu_utama(){
    cout << "\nSelamat datang di Hammer Bakery\n";
    cout << "Silahkan lihat-lihat !\n";
    kue();
}

void login(){
    string a,b;
    cout << "Masukan nama :"; cin >> a;
    cout << "Password anda : ";  cin >> b;

    if(nama == a && pass == b){
        cout << "berhasil login !\n";
        log = true;
    }
    else{
        cout <<"user atau password salah !\n";
    }
}

void daftar(){
    string a,b;
    cout << "Selamat datang di pendaftaran !\n";
    cout << "Nama : "; cin >> a;
    cout << "Pass : "; cin >> b;
    nama = a;
    pass = b;
    cout << "Selamat anda terdaftar, " << nama << '!';
}

int main(){
    char pilihan;
 

    while(active){
        cout << "\n1. daftar\n";
        cout << "2. login\n";
        cout << "3. exit\n";
        cout << "mau ngapain : ";
        cin >> pilihan;
        switch (pilihan)
        {
        case '1':
            daftar();
            break;
        case '2':
            login();
            break;
        case '3':
            active = false;
            break;
        default:
            break;
        }
        
    while(log){
        char pesan;
        menu_utama();
        cout << "Mau pesan (y/n) : "; cin >> pesan;

        switch (pesan)
        {
        case 'y':
            cout << "Berikut pilihannya !\n";
            kue();
            pilih_kue();
            kosumisasi();
                rancang_kue();
            break;
        case 'n':
            log = false;
            cout << "Terimakasih Telah Berkujung, " << nama << "!\n"; 
            break;
        default:
            cout << "Pilihan tidak valid !";
            break;
        }
    

    }


    }// penutup while
    return 0;
}
